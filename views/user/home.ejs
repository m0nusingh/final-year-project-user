<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="./index.css">
    <script src="https://kit.fontawesome.com/42deadbeef.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <nav>
        <input type="checkbox" id="check">
        <label for="check">
            <i class="fas fa-bars" id="btn"></i>
            <i class="fas fa-times" id="cancel"></i>
        </label>
        <ul>
            <li><a href="/home">home</a></li>
            <li><a href="/placement">Placement</a></li>
            <li><a href="/notification">Notification</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
  
    <div>
        <h3 style="margin-left: 39%; margin-top: 35px; color: white;">Welcome  <%=currentUser.name%></h>
    </div>


    <div class="wrapper">
        <form class="form-signin" style="background-color: #262626;">       
          <h4 class="form-signin-heading"><a href="/event/new" style="color: #dce3d3;">Create new</a></h4>
          <hr style="color: white;">
          <h2 class="form-signin-heading" style="color: red;">Admin events</h2>
          <%my_events.forEach((e)=>{%>
            <a href="/event/search?eid=<%=e.eid%>">
                <div id="event"> <%=e.display_name%> </div>
            </a>
          <%})%>
          <br>
          <h2 class="form-signin-heading" style="color: red;">Request events</h2>
          <%all_events.forEach((e)=>{%>
            <div id="event" style="color: white;"> <%=e.display_name%> <a href="/event/request?eid=<%=e.eid%>" class="btn-sm btn-primary">Request</a> </div>
            
            
          <%})%>
        </form>
      </div>
      <div class="wrapper">
        <form class="form-signin" style="background-color: #262626;">  
            <h2 class="form-signin-heading" style="color: red;">Events subscribed</h2>     
            <%events.forEach((e)=>{%>
                <a href="/event/search?eid=<%=e.eid%>">
                    <div id="event"> <%=e.display_name%> </div>
                </a>
            <%})%>
            <hr style="color: white;">
            <!-- <h2 class="form-signin-heading"> <a href="/placement">Placement Portal</a></h2> -->
           </form>
      </div>

       
</body>

</html>